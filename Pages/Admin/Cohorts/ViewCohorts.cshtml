@page
@model StudyBuddy.Pages.Admin.Cohorts.ViewCohortsModel
@{
  ViewData["Title"] = "Cohorts List";
  Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}
@section styles
{
<link rel="stylesheet" type="text/css" href="~/css/admin.css" />
}

@section ContentSection {


<div class="page-header my-0">
  <h6 class="page-title offset-9">
    <a asp-page="./AddCohort" class=" btn btn-gradient-success  btn-rounded ">+ Add New Cohort</a>
  </h6>
</div>

<div class="page-header">
  <h2 class="page-title mx-auto my-2">
    Cohorts Table
  </h2>
</div>


<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>
              ID
            </th>
            <th>
              CohortName
            </th>
            <th>
              Description
            </th>
            <th>
              Create time
            </th>
            <th>
              Action
            </th>

          </tr>
        </thead>
        <tbody>
          @foreach (var co in Model.cohortsList)
          {
          <tr>
            <td>
              <div class="idhidden">@co.Id</div>
            </td>
            <td>
              <div class="userhidden">@co.CohortName</div>
            </td>
            <td>
              <div class="userhidden"> @co.Description</div>
            </td>
            <td>
              <div class="userhidden"> @co.Create_time</div>
            </td>


            <th>
              <form method="POST">
                <input type="hidden" asp-for="cohortId" value="@co.Id" />
                <input type="submit" class="btn btn-gradient-danger btn-rounded  btn-small" value="Delete" />
              </form>
            </th>
          </tr>
          }

        </tbody>
      </table>
    </div>
  </div>
</div>


}