@page
@model StudyBuddy.Pages.Admin.Cohorts.AddCohortModel
@{
  ViewData["Title"] = "Add Cohort";
  Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

@section styles
{
<link rel="stylesheet" type="text/css" href="~/css/admin.css" />
}
@section ContentSection {

<div class="col-md-8 grid-margin stretch-card mx-auto">
  <div class="card">
    <div class="card-body">
      <h3 class="card-title mx-auto my-4" style="text-align: center;">@ViewData["Title"]</h3>
      <form class="forms-sample" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">

          <label asp-for="Input.CohortName" class="col-sm-3 col-form-label">Cohort Name</label>
          <div class="col-sm-9">
            <input class="form-control" asp-for="Input.CohortName">
            <span asp-validation-for="Input.CohortName" class=" text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <label asp-for="Input.Description" class="col-sm-3 col-form-label">Description</label>
          <div class="col-sm-9">
            <textarea class="form-control" asp-for="Input.Description"> </textarea>
            <span asp-validation-for="Input.Description" class=" text-danger"></span>
          </div>
        </div>

        <div class="row ">
          <button type="submit" class="btn btn-gradient-primary btn-rounded btn-fw mx-auto">Add Cohort</button>
        </div>

      </form>
    </div>
  </div>
</div>


}
